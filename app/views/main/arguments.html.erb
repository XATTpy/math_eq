<h2><%= @equation.form %></h2>

<form action="arguments/result" method="post">
    <h3>Введите параметры уравнения:</h3>
    <p class="field">
        a = <input required type="number" step="any" name="a" placeholder="4,5">
    </p>
    <p class="field">
        b = <input required type="number" step="any" name="b" placeholder="4,5">
    </p>
    <p class="submit">
        <input type="submit" value="Решить уравнение">
    </p>
</form>